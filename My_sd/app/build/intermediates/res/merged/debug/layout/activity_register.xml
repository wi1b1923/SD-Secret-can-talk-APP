<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@color/th_green"

    tools:context="com.example.hsuanyen.my_sd.Register">

    <!--android:background="@color/ad"-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/th_white"
        android:layout_alignParentTop="true" />

    <!--android:background="@color/ab"-->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="400dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:text="@string/register_textView3" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/pic2"
        android:gravity="center"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="270dp"
        android:layout_below="@+id/etPassword"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pic"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:hint="username" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etEmail"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:gravity="center"
        android:hint="password"
        android:singleLine="true"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bRegister"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:text="Register"
        android:gravity="center"
        android:textAllCaps="false"
        android:background="@drawable/login_btn_style"
        android:layout_below="@+id/etUsername"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/iButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:textColor="@color/th_gr"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/textView3"
        android:text="@string/back_btn" />

</RelativeLayout>

