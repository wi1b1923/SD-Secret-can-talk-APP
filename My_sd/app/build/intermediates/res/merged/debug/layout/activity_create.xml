<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_pg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:visibility="visible">

    <ScrollView
        android:id="@+id/scrollview2"
        android:layout_width="375dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/secret_list_tv_des"
                android:textColor="#000000"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_reci_imfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_des"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/reci_imfor"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/reci_layout"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_reci_imfor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_reci"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="@string/secret_list_tv_reci"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/recipient_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"

                        android:layout_weight="1"
                        android:background="@drawable/create_edit_style"
                        android:ems="10"
                        android:hint="@string/secret_list_recipient_ed_hint"
                        android:inputType="textPersonName" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv_reci"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="@string/secret_list_tv_email"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/email_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/create_edit_style"
                        android:ems="10"
                        android:hint="@string/secret_list_email_ed_hint"
                        android:inputType="textEmailAddress" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_send_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reci_layout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/send_choose"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_below="@+id/tv_send_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/died_away" />



            <!--checkBox打勾會使tv_date tv_time datepicker timepicker屬性設為不可視 研究gone invisible差別-->

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/choose_time"
                android:layout_below="@+id/checkBox"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/tv_date"
                    android:textSize="20sp" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_date"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/datePicker"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/tv_time"
                    android:textSize="20sp" />

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time"
                    android:calendarViewShown="false"
                    android:timePickerMode="spinner" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/sp_layout"
                android:layout_height="match_parent"
                android:layout_below="@id/choose_time"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="@string/secret_base" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/choose_time"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_mytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_layout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/secret_list_tv_mytext"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/mytext_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mytext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/create_edit_style"
                android:ems="8"
                android:gravity="start"
                android:hint="@string/secret_list_mytext_ed_hint"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:singleLine="false" />

            <Button
                android:id="@+id/create_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mytext_ed"
                android:background="@drawable/create_btn_style"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:layout_alignLeft="@+id/mytext_ed"
                android:text="@string/secret_list_create_btn" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
