        <!--android:layout_marginTop="15dp"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:text="@string/setting_pg_textView7"-->
        <!--android:textSize="20dp"/>-->

    </LinearLayout>
</LinearLayout>
